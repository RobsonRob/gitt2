<Window x:Class="kolko.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kolko"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="MainWindow" Height="450" Width="800"
        KeyDown="Window_KeyDown" Closed="Window_Closed">
    <DockPanel>
        <Slider x:Name="sliderB" ValueChanged="sliders_ValueChanged" DockPanel.Dock="Bottom" Margin="10" Maximum="255"/>
        <Slider x:Name="sliderG" ValueChanged="sliders_ValueChanged" DockPanel.Dock="Bottom" Margin="10" Maximum="255"/>
        <Slider x:Name="sliderR" ValueChanged="sliders_ValueChanged" DockPanel.Dock="Bottom" Margin="10" Maximum="255"/>
        <Rectangle x:Name="rectangle" Fill="Black" Margin="10"/>
    </DockPanel>
</Window>
